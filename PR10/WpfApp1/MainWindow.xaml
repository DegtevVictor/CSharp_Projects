<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        SizeToContent="Height">
    <StackPanel>
        <WrapPanel>
            <Label Content="i: " MinWidth="70"/>
            <TextBox x:Name="textBox1" Width="75"/>
        </WrapPanel>
        <WrapPanel>
            <Label Content="j: " MinWidth="70"/>
            <TextBox x:Name="textBox2" Width="75"/>
        </WrapPanel>
        <WrapPanel>
            <Label Content="Результат:" MinWidth="70"/>
            <TextBox x:Name="textBox3" Width="75"/>
        </WrapPanel>
        <Button x:Name="button1" Content="Вычислить" Width="75" Margin="0" HorizontalAlignment="Left" Click="button1_Click"/>
    </StackPanel>
</Window>
